{
    "version": "0.2.0",
    "configurations": [
                  {
                    "name": "Run mocha webpack",
                    "type": "node",
                    "request": "launch",
                    "port": 9229,
                    "program": "${workspaceRoot}/node_modules/mocha-webpack/bin/mocha-webpack",
                    "stopOnEntry": false,
                    "sourceMaps": true,
                    "args": [
                        "--webpack-config", "${workspaceRoot}/webpack.config.js",
                        "--timeout", "9999999",
                        "--colors",
                        "${file}"
                    ],
                    "cwd": "${workspaceRoot}",
                    "preLaunchTask": null,
                    "runtimeExecutable": null,
                    "runtimeArgs": [
                       "--inspect-brk"
                    ],
                    "env": { "NODE_ENV": "testing"},
                    "console": "integratedTerminal",
                    "outFiles": []
                  },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha All",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--timeout",
              "999999",
              "--colors",
              "${workspaceFolder}/tests"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha Current File",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--timeout",
              "999999",
              "--colors",
              "${file}"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
        }
        ]
  }