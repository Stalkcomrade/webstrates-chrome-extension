{
    "name": "Vue.js Chrome Extension",
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "page": "background.html",
        "script": "background.js,"
    },
    "content_scripts": [{
        "js": ["mocha.bundle.js"],
        "matches": ["https://*/*"]
    }],
    "web_accessible_resources": [
        "assets/mocha.js",
        "assets/*.png"
    ],
    "permissions": [
        "*://*/*",
        "<all_urls>",
        "*://cdnjs.cloudflare.com/*",
        "*://webstrates.cs.au.dk/*",
        "activeTab",
        "tabs",
        "storage",
        "bookmarks",
        "history",
        "webRequest",
        "webRequestBlocking"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons": {
        "16": "ws.png",
        "48": "ws.png",
        "128": "ws.png"
    }
}
